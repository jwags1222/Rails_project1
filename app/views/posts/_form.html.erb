
<%= render 'shared/errors', obj: @post %>  

<div class='well' >

<%= form_for @post do |form| %> 

  <div class ='control-group'> 
  <%= form.label :title %> 
  <%= form.text_field :title %> 
  </div> 

  <div class ='control-group'> 
  <%= form.label :url, "URL", class: "col-md-4 control-label" %> 
  <%= form.text_field :url %>
  </div> 

  <div class ='control-group'> 
  <%= form.label :description %> 
  <%= form.text_area :description, rows: 5, placeholder: "Type your post here" %> 
  </div> 
  <div class = 'control-group'>
    <%= form.label 'Categories' %> 
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %> 
    <%= cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
  
    <% end %> 
    </div>
  <%= form.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: "btn btn-primary") %> 
<% end %> 
</div>