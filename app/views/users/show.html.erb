<%= render 'shared/content_title', title: "Profile: #{@user.user_name}" %> 

<div class='well'> 

  <dl class='dl-horizontal'> 
    <dt> Username: </dt> 
      <dd> <%= @user.user_name %> </dd> 
    </dl> 
</div> 

    <h5><%= @user.user_name %> Activity</h5> 
    <ul class ='nav nav-tabs'> 
     <li class ='<%= 'active' if params[:clicked].nil? %>' >
        <%= link_to "Posts (#{@user.posts.size})", user_path(@user) %> 
      </li> 
      <li class ='<%= 'active' if params[:clicked] == 'comments'%>' >
        <%= link_to "Comments(#{@user.comments.size})", user_path(@user, clicked: 'comments') %>
      </li>
    </ul> 

    <% if params[:clicked].nil? %> 

      <% @user.posts.each do |p| %> 
      <%= render 'posts/post', post: p %>  
      <%end%> 

    <% elsif params[:clicked] == 'comments' %> 
    <% @user.comments.each do |comment| %> 
      <%= render 'comments/comment', comment: comment, show_post: true %> 
      <%end%>

    <% end %> 



    